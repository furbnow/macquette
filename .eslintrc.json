{
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "script"
    },
    "rules": {
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single", "avoid-escape"],
        "semi": ["error", "always"],
        "no-console": "off",
        "indent": "off",
        "curly": ["error", "all"],
        "brace-style": ["error", "1tbs"],
        "indent": ["error", 4, { "SwitchCase": 1 }]
    }
}
